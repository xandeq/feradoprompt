<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet"
                  arguments=".\FeraPrompt.Api.dll"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="inprocess">
        <environmentVariables>
          <!-- Ambiente -->
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
          <environmentVariable name="ASPNETCORE_HTTPS_PORT" value="443" />
          
          <!-- Banco de Dados -->
          <environmentVariable name="DB_SERVER" value="sql1003.site4now.net" />
          <environmentVariable name="DB_NAME" value="db_aaf0a8_feradoprompt" />
          <environmentVariable name="DB_USER" value="db_aaf0a8_feradoprompt_admin" />
          <environmentVariable name="DB_PASSWORD" value="7Wh1v3EEtMQH" />
          
          <!-- Webhooks n8n -->
          <environmentVariable name="WEBHOOK_PRODUCTION_URL" value="https://n8n-n8n.h8tqhp.easypanel.host/webhook/prompt-cowboy" />
          <environmentVariable name="WEBHOOK_TEST_URL" value="https://n8n-n8tqhp.easypanel.host/webhook-test/prompt-cowboy" />
          
          <!-- Frontend -->
          <environmentVariable name="FRONTEND_BASE_URL" value="https://feradoprompt.com.br" />
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>

  <!-- Configuração para permitir arquivos maiores -->
  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="52428800" /> <!-- 50 MB -->
      </requestFiltering>
    </security>
    
    <!-- Habilitar logs de erro -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Configurações de compressão -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Configurações de reescrita para HTTPS (opcional) -->
    <rewrite>
      <rules>
        <rule name="Swagger Redirect" stopProcessing="true">
          <match url="^$" />
          <action type="Redirect" url="/swagger" redirectType="Temporary" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
